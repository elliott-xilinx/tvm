FROM tvm.ci_cpu_dev

RUN apt-get update && apt-get install -y --no-install-recommends\
	build-essential\
 	ca-certificates\
 	cmake\
	rsync\
	sudo\
	curl\
 	wget\
 	git\
 	vim\
 	graphviz\
	python\
 	python-pip\
 	python-setuptools\
 	python-dev\
 	python-skimage\
 	libatlas-base-dev\
 	libboost-all-dev\
 	libgflags-dev\
 	libgoogle-glog-dev\
 	libhdf5-serial-dev\
 	libleveldb-dev\
 	liblmdb-dev\
 	libopencv-dev\
 	libprotobuf-dev\
 	libsnappy-dev\
 	protobuf-compiler\
 	libyaml-cpp-dev\
 	libopenblas-dev

