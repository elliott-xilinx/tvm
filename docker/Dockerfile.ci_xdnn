RUN pip install --upgrade pip
RUN pip3 install --no-cache-dir\ 
	six==1.11.0 \
	tensorflow==1.8 \
	numpy==1.14.3 \
	pydot==1.4.1 \
	h5py==2.8.0 \
	zmq==0.0.0 \
